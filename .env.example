# Core
SECRET_KEY=change-me
APP_TIMEZONE=Asia/Manila

# Database (DigitalOcean Managed Postgres example)
# Include sslmode=require if your cluster enforces TLS
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require

# Cookies / Security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=Lax
PREFERRED_URL_SCHEME=https

# Logging
LOG_LEVEL=INFO

# Flask-SocketIO
SOCKETIO_ASYNC_MODE=eventlet
SOCKETIO_PING_TIMEOUT=60
SOCKETIO_PING_INTERVAL=25
# Comma-separated list. Example: https://yourdomain.com,https://www.yourdomain.com
SOCKETIO_CORS_ALLOWED_ORIGINS=
SOCKETIO_LOGGER=false
SOCKETIO_ENGINEIO_LOGGER=false
# Optional: Redis message queue when scaling beyond one worker or one instance
SOCKETIO_MESSAGE_QUEUE=

# WebRTC ICE/TURN
# Provide either a full ICE server list as JSON, or the TURN_* values below.
# Example JSON: [{"urls":"turn:turn.yourdomain.com:3478?transport=udp","username":"user","credential":"pass"}]
ICE_SERVERS_JSON=
TURN_URL=turn:turn.yourdomain.com:3478?transport=udp
TURN_USERNAME=
TURN_PASSWORD=

# Development server only (run.py)
HOST=127.0.0.1
PORT=5000
DEBUG=0
